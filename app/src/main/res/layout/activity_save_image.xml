<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fce4ec"
    android:outlineProvider="paddedBounds">

    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:id="@+id/img_picture_taken"
        android:outlineProvider="paddedBounds"
        android:background="#090909"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="83dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_category"
        android:layout_alignTop="@+id/img_picture_taken"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/img_picture_taken"
        android:layout_toEndOf="@+id/img_picture_taken" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_color"
        android:layout_alignBottom="@+id/img_picture_taken"
        android:layout_toRightOf="@+id/img_picture_taken"
        android:layout_toEndOf="@+id/img_picture_taken"
        android:layout_marginBottom="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo"
        android:id="@+id/btn_take_photo"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/img_picture_taken"
        android:layout_alignEnd="@+id/img_picture_taken"
        android:layout_marginTop="42dp" />


</RelativeLayout>
